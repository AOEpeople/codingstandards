<?xml version="1.0"?>
<ruleset name="namespace">
    <description>
        This ruleset is based on the PSR2 standard with some exclusions.
        This ruleset is much more stricter than the "aoe" ruleset.
    </description>
    <rule ref="PSR2"/>
    <rule ref="../../../../aoe/codingstandards/Aoe">
        <exclude name="Aoe.CopyrightDoc.CopyrightDoc"/>
    </rule>
    <rule ref="Generic.Files.LineLength">
        <properties>
            <property name="lineLimit" value="140"/>
            <property name="absoluteLineLimit" value="140"/>
        </properties>
    </rule>
</ruleset>
